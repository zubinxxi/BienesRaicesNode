extends ../layout/index

block contenido
    div 
        a(href="/")
            h1.text-4xl.my-10.font-extrabold.text-center Bienes 
                span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div.mt-8.mx-auto.max-w-md 
            div.bg-white.py-8.px-4.shadow
                form(action="/login" method="POST").space-y-5 

                    input(type="hidden" name="_csrf" value= csrfToken)

                    div 
                        label.block.text-sm.uppercase.text-gray-500.font-bold.mb-2(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Correo" type="email" name="email" value= usuario ? usuario.email : '')

                    div 
                        label.block.text-sm.uppercase.text-gray-500.font-bold.mb-2(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu contraseña" type="password" name="password")

                    div.flex.items-center.justify-between 
                        a(class="text-gray-500 text-xs" href="/registro") ¿No tienes cuenta? Crea una 
                        a(class="text-gray-500 text-xs" href="/olvide-password") Olvidé mi contraseña

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Iniciar Sesión")